@charset "utf-8";
@font-face {
  font-family: mui;
  src: url("../fonts/mui.ttf");
}
* {
  margin:0; 
  padding:0;
  box-sizing:border-box;
  list-style:none;
  -wekit-tap-highlight-color:rgba(200,200,200,0.5)
}
html,
body {
  width: 100%;
  height: 100%;
  overflow: hidden;
  -webkit-tap-highlight-color:rgba(255,255,255,0);
  font-family: mui;
} 
* {
  margin: 0px;
  padding: 0px;
} 
li {
  list-style: none;
}
.base .level0 {
  width: 100%;
  height: 100%;
  background: url("../image/bg_level_2.png") no-repeat center;
  background-size: 100% 100%;
  position: relative;
}
.base .center_bar {
  position: absolute;
  top: 50%;
  margin-top: -50%;
  padding: 0 32px;
  width: 100%;
}
.base .header {
  margin-bottom: 30px;
  width: 100%;
  height: 60px;
  text-align: center;
}
.base .header img {
  height: 100%;
}
.base .reg {
  width: 100%;
  color: #000;
}
.base .reg .p {
  padding: 0 18px;
  height: 54px;
  line-height: 54px;
  border-bottom: 1px solid rgba(0,0,0,.2);
}
.base .reg .p.col_60 {
  float: left;
  width: 60%;
}
.base .reg .p.col_40 {
  float: left;
  position: relative;
  width: 40%;
  border: 0;
}
.base .reg .p.col_40 .vld_btn {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 90%;
  height:44px;
  line-height: 44px;
  letter-spacing: 2px;
  text-align: center;
  color: rgba(0,0,0,.3);
  background-color: rgba(0,0,0,.2);
  border-radius: 5px;
}
.base .reg input {
  padding-left: 40px; 
  width: 100%;
  height: 100%;
  font-size: 18px;
  background-color: transparent;
  border: 0px;
  outline: 0px;
  color: #666;
}
.base .reg input::-webkit-input-placeholder {
  color: rgba(0,0,0,.3);
}
.base .reg input:focus {
	opacity: 1;
	color: #333;
}
.base .reg .lblUser {
  background: url(../image/icon_account-2.png) no-repeat left;
  background-size: 23px auto;
}
.base .reg .lblMobile {
  background: url(../image/icon_phone-01.png) no-repeat left;
  background-size: 23px auto;
}
.base .reg .lblpwd {
  background: url(../image/icon_password-01.png) no-repeat left;
  background-size: 23px auto;
}
.base .reg .lblcode {
  background: url(../image/icon_message-01.png) no-repeat left;
  background-size: 23px auto;
}
.base .reg .jl {
  display: inline-block;
  width: 25px;
}
.base .reg span {
  opacity: 0.2;
  float: left;
  height: 44px;
  line-height: 44px;
}
.base .reg .btnReg #btnSend {
  width: 70px;
  height: 44px;
  line-height:44px;
  font-size: 18pt; 
 
  border-radius: 5px;
  background-color:transparent;
  border:0px;
  outline:0px;
  opacity: 0.4; 
  margin-left: 2px; 
  margin-top: -3px; 
}
.base .reg .losepwd {
  margin-top: 10px;
  height: 20px;
}
.base .reg .losepwd a {
  float: right;
  color: #000;
  font-size: 18px;
  text-decoration: none;
  opacity: .2;
}
.base .reg .btnReg {
  margin-top: 32px;
  width: 100%;
  height: 44px;
  line-height: 44px;
  font-size: 18px;
  letter-spacing: 2px;
  text-align: center;
  color: #fff;
  background-color: rgba(0,0,0,.2);
  border-radius: 5px;
}
.base .foot_bar {
  position: absolute;
  bottom: 18px;
  width: 100%;
  text-align: center;
}
.base .footclose {
  display: inline-block;
  width: 36px;
  height: 36px;
  background: url(../image/icon_cancel-01.png) no-repeat;
  background-size: contain;
}
.base .noaccount {
  margin-bottom: 20px;
  opacity: 0.2;
}
.base .noaccount a {
  font-size: 18px;
  color: #000;
  text-decoration: none;
}

.base .reg.bindguide {
  position: absolute;
  top: 45%;
  margin-top: -50%;
  padding: 0 36px;
  width: 100%;
}
.base .reg.bindguide img {
  width: 100%;
}