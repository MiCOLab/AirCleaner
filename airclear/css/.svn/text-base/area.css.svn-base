@charset "utf-8";
html,
body {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
body {
  font: arial, "\5b8b\4f53", sans-serif, tahoma, "Microsoft YaHei";
}
* {
  margin: 0px;
  padding: 0px;
}
li {
  list-style: none;
}
.base .level01 {
  width: 100%;
  height: 100%;
  background: url(../image/bg_sleep-01.png) no-repeat center;
  background-size: 100% 100%;
  overflow-y: scroll;
}
.base .area {
  width: 280px;
  height: 100%;
  margin: 0px auto;
  padding: 18px;
}
.base .area .search {
  width: 220;
  height: 36px;
  position: relative;
}
.base .area .search .cover {
  width: 100%;
  height: 100%;
  background-color: #000000;
  border-radius: 5px;
  opacity: 0.1;
}
.base .area .search .input {
  position: absolute;
  margin: -31px 3px 3px 3px;
  height: 25px;
  line-height: 25px;
  width: 240px;
  background-color: transparent;
  border: 0px;
  outline: 0px;
}
.base .area .search .img {
  width: 25px;
  height: 25px;
  position: absolute;
  cursor: pointer;
  margin: -31px 3px 3px 250px;
}
.base .area .list {
  margin-top: 18px;
  color: #fff;
}
.base .area .list .ularea li {
  min-height: 24px;
}
.base .area .list .ularea li .zm {
  display: inline-block;
  background-color: #fff;
  width: 260px;
  height: 24px;
  font-size: 12pt;
  opacity: 0.3;
  position: relative;
  margin-left: -26px;
}
.base .area .list .ularea li label {
  height: 24px;
  line-height: 24px;
  float: left;
}
.base .area .list .ularea li dl {
  height: 35px;
  line-height: 35px;
  font-size: 18pt;
  cursor: pointer;
}
.base .area .leftnav {
  position: fixed;
  right: 10px;
}
.base .area .leftnav li {
  width: 15px;
  height: 15px;
  line-height: 15px;
  text-align: center;
}
.base .area .leftnav .selected {
  background-color: #fff;
  color: #000000;
}
.base .footclose {
  width: 18px;
  height: 18px;
  display: inline-block;
  margin-left: -18px;
  position: fixed;
  bottom: 68px;
  background: url(../image/icon_cancel-01.png) no-repeat;
  background-size: 18px 18px;
  cursor: pointer;
}
