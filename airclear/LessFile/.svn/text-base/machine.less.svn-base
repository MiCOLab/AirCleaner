@charset "utf-8";
 
html,body{width:100%;height: 100%;overflow: hidden;} 
body{font-family:"Microsoft YaHei";}
*{margin:0px;  padding: 0px; }
@font-face {font-family:mui; src: url("../fonts/mui.ttf")} 
li{list-style: none;}


.base{
	.level0{
		width: 100%;
		height: 100%;
		background: url("../image/bg_sleep-01.png") no-repeat center;  
		background-size: 100% 100%;
	} 
	.header{
		width: 120px; 
		height: 120px;
		margin: 0px auto;
		padding: 18px; 
		img{ width: 100%;height: 100%;}
	} 
	.reg{
		width: 300px;
		height: 350px;
		margin:30px auto;
		font-size: 18pt ;
		color: #000000;
		opacity:0.8;
		p{ height: 54px; margin-top: 10px; }
		.line{height: 0px;border-bottom:1px solid #000000;opacity: 0.2; }
		input{ width: 250px; outline: 0px; color: #000000; border: 0px; height: 44px;line-height: 44px; font-size: 18pt;float: left;background-color: transparent; margin-left:6px;} 

		.lblwifi{
			background: url(../image/icon_wifi-01.png) no-repeat;  display: inline-block; height: 44px; width: 44px;float: left;
		}
		.lblpwd{
			background: url(../image/icon_password-01.png) no-repeat;  height: 44px; width: 44px;display: inline-block;float: left;
		}
		.lblcode{
			background: url(../image/icon_message-01.png) no-repeat; height: 44px; width: 44px;display: inline-block;float: left;
			border-width: 80px;
		}
		.jl{ display: inline-block; width: 25px;}
		span{opacity: 0.2; float: left;height: 44px; display: inline-block;  line-height: 44px;}
		#btnSend{ width: 120px; height: 42px; font-size:18pt;color:#000000;opacity: 0.2 ; position: absolute; margin-left: -80px; border-radius: 5px;}
		
		.btnReg{
			width: 300px;
			height: 40px;
			margin: 32px auto;
			text-align: center;; 
			.bg{ width: 100%;height: 100%;background-color:#000000;opacity: 0.2 ;border-radius: 5px;};
			.btn{
				width: 300px;
				height: 40px;  
				margin: -40px 0px 0px 0px;
				position: absolute;
			}
			#btnSubmit{
				font-size: 18pt;
				color: #fff;
				width: 100%;
				height: 100%;   
			}
		} 
	}
	.footclose{
		width: 18px;
		height: 18px;   
		display: inline-block;  
		bottom: 18px;
		position:fixed;
		background: url(../image/icon_cancel-01.png) no-repeat;
		background-size: 18px 18px;
		cursor: pointer;
		margin-left: -15px;
	}
} 